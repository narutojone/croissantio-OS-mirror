<% content_for :title, "Contact"  %>
<% content_for :description, "This is the contact page for the website thegrowthbakery.com" %>
<% content_for :ogtitle, "Contact" %>
<% content_for :ogdescription, "This is the contact page for the website thegrowthbakery.com" %>
<% content_for :ogtype, "page" %>
<% content_for :css do %>
  <%= stylesheet_link_tag "bootstrap", "stack-interface", "socicon", "lightbox.min", "flickity", "iconsmind", "theme", "models/pages" %>
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:200,300,400,400i,500,600,700%7CMerriweather:300,300i%7CMaterial+Icons" rel="stylesheet">
<% end %>
<%= render "shared/stack_navbar" %>
<div class="main-container">
  <section class="text-center height-50">
    <div class="container pos-vertical-center">
      <div class="row">
        <div class="col-sm-8 col-md-6">
          <h1>Let's talk about your project</h1>
          <p class="lead">
            Use the form below to get in touch with me or just send me an email: <a href="mailto:maxime@growthbakery.com">maxime@growthbakery.com</a>
                    </p>
        </div>
      </div>
      <!--end of row-->
    </div>
    <!--end of container-->
  </section>
  <section class=" bg--secondary">
    <div class="container">
      <div class="row">
        <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
          <div class="row">
            <div class="boxed boxed--border">
              <%= form_for @contactform, html: {class: "text-left"} do |f| %>
                <%= render "shared/error_messages", object: f.object %>
                <div class="col-sm-6">
                  <%= f.label :name, "Name" %>
                  <%= f.text_field :name, style: "background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;" %>
                </div>
                <div class="col-sm-6">
                  <%= f.label :company, "Company" %>
                  <%= f.text_field :company %>
                </div>
                <div class="col-sm-6">
                  <%= f.label :url, "URL" %>
                  <%= f.text_field :url %>
                </div>
                <div class="col-sm-6">
                  <%= f.label :email, "Email*" %>
                  <%= f.email_field :email, required: true, class: "validate-required" %>
                </div>
                <div class="col-sm-6">
                  <%= f.label :phone, "Phone" %>
                  <%= f.phone_field :phone %>
                </div>
                <div class="col-sm-12">
                  <%= f.label :message, "Details about your project*" %>
                  <%= f.text_area :message, required: true, rows: 3, style: "height: auto", class: "validate-required" %>
                </div>
                <div class="col-sm-12 text-center boxed">
                  <h5>The Growth Bakery Services you are interested in:</h5>
                </div>
                <div class="col-sm-3 col-xs-6 text-center">
                  <%= f.label :marketing_foundation, "Marketing Foundation", class: "block" %>
                  <div class="input-checkbox">
                    <div class="inner"></div>
                    <%= f.check_box :services, {multiple: true}, "marketing_foundation" %>
                  </div>
                </div>
                <div class="col-sm-3 col-xs-6 text-center">
                  <%= f.label :growth_stack, "Growth Stack", class: "block" %>
                  <div class="input-checkbox">
                    <div class="inner"></div>
                    <%= f.check_box :services, {multiple: true}, "growth_stack" %>
                  </div>
                </div>
                <div class="col-sm-3 col-xs-6 text-center">
                  <%= f.label :growth_process, "Growth Process", class: "block" %>
                  <div class="input-checkbox">
                    <div class="inner"></div>
                    <%= f.check_box :services, {multiple: true}, "growth_process" %>
                  </div>
                </div>
                <div class="col-sm-3 col-xs-6 text-center">
                  <%= f.label :growth_coaching, "Growth Coaching", class: "block" %>
                  <div class="input-checkbox">
                    <div class="inner"></div>
                    <%= f.check_box :services, {multiple: true}, "growth_coaching" %>
                  </div>
                </div>
                <div class="col-sm-12 text-center boxed">
                  <h5>Approximate Budget</h5>
                </div>
                <div class="col-xs-4 text-center">
                  <div class="input-radio">
                    <%= label :budget, '$4,000' %>
                    <div class="inner"></div>
                    <%= f.radio_button :budget, 'Less than 4K' %>
                  </div>
                </div>
                <div class="col-xs-4 text-center">
                  <div class="input-radio">
                    <%= label :budget, '$4,000 - $10,000' %>
                    <div class="inner"></div>
                    <%= f.radio_button :budget, 'Between 4k and 10K' %>
                  </div>
                </div>
                <div class="col-xs-4 text-center">
                  <div class="input-radio">
                    <%= label :budget, '$ 10,000+' %>
                    <div class="inner"></div>
                    <%= f.radio_button :budget, 'More than 10K' %>
                  </div>
                </div>
                <div class="hidden">
                  <%= f.label :nickname %>
                  <%= f.text_field :nickname, hint: "Leave this blank", class: "form-control" %>
                </div>
                <div class="col-sm-12 boxed">
                  <%= f.submit "Send Message", class: "btn btn--primary type--uppercase" %>
                <% end %>
              </div>
            </div>
          </div>
          <!--end of row-->
        </div>
      </div>
      <!--end of row-->
    </div>
    <!--end of container-->
  </section>
  <%= render "shared/stack_footer" %>
</div>
<!--<div class="loader"></div>-->
<a class="back-to-top inner-link" href="#start" data-scroll-class="100vh:active">
  <i class="stack-interface stack-up-open-big"></i>
</a>
<% content_for :js do %>
  <%= javascript_include_tag "jquery-3.1.1.min", "flickity.min", "parallax", "typed.min", "isotope.min", "ytplayer.min", "lightbox.min", "granim.min", "countdown.min", "twitterfetcher.min", "spectragram.min", "smooth-scroll.min", "scripts"  %>
<% end %>
