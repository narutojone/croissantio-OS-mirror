<% content_for :title, "B2B SaaS Marketing & Growth"  %>
<% content_for :description, "Croissant is a solo B2B SaaS Marketing & Growth consultancy that uses a data-driven approach to customer acquisition." %>
<% content_for :ogtitle, "B2B SaaS Marketing & Growth" %>
<% content_for :ogdescription, "Croissant is a solo B2B SaaS Marketing & Growth consultancy that uses a data-driven approach to customer acquisition." %>
<% content_for :ogtype, "page" %>
<% content_for :ogimage, image_path('maxime-salomon.jpg') %>
<%= content_for :css do %>
  <%= stylesheet_link_tag  "bootstrap", "models/articles",  "stack-interface", "socicon", "lightbox.min", "flickity", "iconsmind", "theme", "models/pages"  %>
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:200,300,400,400i,500,600,700%7CMerriweather:300,300i%7CMaterial+Icons" rel="stylesheet">
<% end %>
<%= render "shared/stack_navbar" %>
<div class="main-container">
  <section class="text-center">
    <div class="container">
      <div class="row">
        <div class="col-sm-10 col-sm-offset-1 col-md-9 col-md-offset-3">
          <h1 class="title-home section__title">Growth Recipes for SaaS</h1>
          <p class="lead section__desc">
          "Growth Recipes" <strong>=</strong> Growth Tools Implementation <strong>+</strong> Growth Tactics Execution
          </p>
          <button type="submit" class="btn section__btn _color_grad-blue type--uppercase js--open-popover col-md-5 col-sm-7 col-xs-12">Explore Growth Recipes</button>
        <!-- /End hero-section -->
        <div class="ck_errorArea">
          <div id="ck_error_msg" style="display:none">
            <p>Sorry, there was an error. Please try again to subscribe.</p>
          </div>
        </div>
      </div>
    </div>
    <!--end of row-->
  </div>
  <!--end of container-->
  <div class="col-md-4 col-sm-6 col-xs-11 section__popover _shadow_light js--home-popover">
    <form action="https://www.getdrip.com/forms/412417630/submissions" method="post" data-drip-embedded-form="412417630">
      <h3 class="hidden" data-drip-attribute="headline">Growth Recipes</h3>
      <div data-drip-attribute="description"></div>
        <div class="form-group">
            <label class="hidden"  for="drip-email">Email Address</label>
            <input placeholder="Email" class="form-control"  type="email" id="drip-email" name="fields[email]" value="" />
        </div>
      <div>
        <input class="btn section__btn _color_grad-blue type--uppercase" type="submit" name="submit" value="Sign Up" data-drip-attribute="sign-up-button" />
      </div>
    </form>
  </div>
</section>
</div>
<% content_for :js do %>
<%= javascript_include_tag "flickity.min", "parallax", "typed.min", "isotope.min", "ytplayer.min", "lightbox.min", "granim.min", "countdown.min", "twitterfetcher.min", "spectragram.min", "smooth-scroll.min", "scripts", "script"  %>
<script type="text/javascript">
  function Subscribed() {
  	analytics.track('Subscribed');
  	window.optimizely.push(["trackEvent", "Subscribed"]);
  }

  analytics.page('Home', {
    path: "/"
  });

  openPopover()
</script>
<% end %>
