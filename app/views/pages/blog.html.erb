<% content_for :title, "Blog"  %>
<% content_for :description, "Description for blog" %>
<% content_for :ogtitle, "Blog" %>
<% content_for :ogdescription, "Description for blog." %>
<% content_for :ogtype, "page" %>
<% content_for :ogimage, image_path('maxime-salomon.jpg') %>
<% content_for :css do %>
  <%= stylesheet_link_tag "blog" %>
<% end  %>

<%= render "shared/navbar" %>
<div class="container">
<div class="row">

            <!-- Blog Entries Column -->
            <div class="col-md-8">
          <% @articles.each do |article| %>
					<article>
                <h2>
                    <%= article.title %>
                </h2>
                <hr>
								<div class="article-img">
									<%= link_to articles_show_path(article)  do  %>
                <%= image_tag article.image.url, style: "max-width: 100%; max-height: 250px:" %>
								<% end %>
								</div>
                <hr>
                <p><%= article.description %></p>
								<%= link_to "Read more", articles_show_path(article), class: "btn btn-primary" %>
                <hr>
								</article>
						<% end %>
					</div>

            <!-- Blog Sidebar Widgets Column -->
            <div class="col-md-4">

                <!-- Blog Search Well -->
                <div class="well">
                    <h4>Blog Search</h4>
                    <div class="input-group">
                        <input type="text" class="form-control">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">
                                <span class="glyphicon glyphicon-search"></span>
                        </button>
                        </span>
                    </div>
                    <!-- /.input-group -->
                </div>

                <!-- Blog Categories Well -->
                <div class="well">
                    <h4>Blog Categories</h4>
                    <div class="row">
                        <div class="col-lg-6">
                            <ul class="list-unstyled">
                                <li><a href="#">Category Name</a>
                                </li>
