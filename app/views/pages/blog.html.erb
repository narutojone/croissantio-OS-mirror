<div class="main-container">
    <section class="space--sm">
        <div class="container">
            <div class="row">
                <div class="col-sm-10 col-md-8 col-sm-offset-1 col-md-offset-2">
                    <div class="masonry masonry-blog-list">
                        <div class="masonry-filter-container text-center">
                            <span>Category:</span>
                            <div class="masonry-filter-holder">
                                <div class="masonry__filters" data-filter-all-text="All Categories"></div>
                            </div>
                        </div>
                        <hr>
                        <div class="masonry__container">
                          <% @articles.each do |article| %>
                            <article class="masonry__item filter-<%= article.category_name %>" data-masonry-filter="<%= article.category_name %>">
                                <div class="article__title text-center">
                                    <%= link_to articles_show_path(article) do %>
                                        <h2><%= article.title %></h2>
                                    <% end %>
                                    <span><%= article.created_at.strftime("%B #{article.created_at.day.ordinalize} %Y") %> in
                                    </span>
                                    <span>
                                        <%= link_to category_path(article.category_name) do %>
                                          <%= article.category_name.capitalize %>
                                        <% end %>
                                    </span>
                                </div>
                                <!--end article title-->
                                <div class="article__body">
                                  <%= link_to articles_show_path(article) do %>
                                      <%= image_tag article.image.url %>
                                  <% end %>
                                    <p>
                                        <%= article.description %>
                                    </p>
                                    <%= link_to "Continue reading Â»", articles_show_path(article) %>
                                </div>
                            </article>
                            <% end %>
                        </div>
                        <!--end of masonry container-->
                        <div class="pagination">
                            <div class="col-xs-6">
                                <a class="type--fine-print" href="#">&laquo; Older Posts</a>
                            </div>
                            <div class="col-xs-6 text-right">
                                <a class="type--fine-print" href="#">Newer Posts &raquo;</a>
                            </div>
                        </div>
                    </div>
                    <!--end masonry-->
                </div>
            </div>
            <!--end of row-->
        </div>
        <!--end of container-->
    </section>
