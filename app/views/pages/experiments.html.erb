    crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  <script>
    $('.js--recipe').click(function() {
      function check() {
        var i = $('.js--list').find('li').length
        $('.js--quantity').html('(' + i + ')')
        $('.js--submit').prop("disabled", i ? false : true)
        $('.letter').css("height", i<3 ? "auto" : "100%")
        $('.js--list').attr("class", i<3 ? "recipes__list js--list" : "recipes__list js--list add-scroll");
      }
      if ($(this).hasClass('selected')) {
        $('.js--list').find('[data-id=' + $(this).data('id') + ']').remove()
        $(this).removeClass("selected")
        check()
      } else {
        $('.js--list').prepend('<li data-id="' + $(this).data('id') + '">' + $(this).find('h3').html() + '</li>')
        $(this).addClass("selected")
        check()
      }
    })
    $('#ck_subscribe_form').submit(function(e) {
      e.preventDefault()
      var a = $('.js--list').text().replace(/ /g,'').split('\n').filter(n => n)
      a = a.slice(0, a.length - 1)
      $.ajax({
        type: "POST",
        url: "/experiments/send",
        data: {'body': {'email': $('#ck_emailField').val(), 'quantity': $('.js--list').find('li').length, 'experiments': a }},
        success: function() {
          $("#ck_subscribe_form").hide()
          $(".js--success").show('fast')
        }
      });
    })
    $('.js--toggle').click(function() {
      $('.js--recipes').toggleClass("_opened")
      $('.js--toggle').toggleClass("_down")
    })

    $(window).scroll(function() {
      if ($(window).scrollTop() >= $(".js--recipe[data-id=1]").offset().top) {
        $(".js--recipes").addClass('fixed')
      } else {
        $(".js--recipes").removeClass('fixed')
      }
    })
  </script>
  <script src="https://unpkg.com/ionicons@4.4.6/dist/ionicons.js"></script>
<% end %>
