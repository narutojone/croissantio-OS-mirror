				</div>
			</div>
			<!--end of row-->
		</div>
	<section class="space--sm">
		<div class="container">
			<div class="row">
				<div class="col-sm-10 col-md-8 col-sm-offset-1 col-md-offset-2">
					<div class="masonry masonry-blog-list">
						<div class="masonry__container">
							<article>
								<div class="article__title text-center">
									<%= link_to articles_show_path(@newsletter) do %>
									<h2><%= @newsletter.title %></h2>
									<% end %>
									<span><%= @newsletter.date.strftime("%B #{@newsletter.date.day.ordinalize} %Y") %>
										in
									</span>
									<span>
										<%= link_to category_path(@newsletter.category_name) do %>
										<%= @newsletter.category_name.capitalize %>
										<% end %>
									</span>
								</div>
								<div class="article__body">
									<%= link_to articles_show_path(@newsletter) do %>
									<%= image_tag @newsletter.image.url %>
									<% end %>
									<p>
										<%= @newsletter.description %>
									</p>
								</div>
							</article>
